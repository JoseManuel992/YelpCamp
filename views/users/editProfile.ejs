<% layout("./layouts/boilerplate") %>
<link rel="stylesheet" href="../../stylesheets/fileInput.css">

<div class="row">
  <h1 class="text-center">Edit Profile</h1>
  <div class="col-md-6 offset-md-3 editFormCard">
    <form action="/profile/<%= user._id %>/edit" method="POST" novalidate class="validated-form" enctype="multipart/form-data">

    <form action="/profile/<%= user._id %>?_method=PUT" method="POST" novalidate enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label" for="username">Username</label>
        <input class="form-control" type="text" name="user[username]" id="username" value="<%= user.username %>" required>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="email">Email</label>
        <input class="form-control" type="email" name="user[email]" id="email" value="<%= user.email %>" required>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="mb-3">
        <div class="form-file custom-file">
          <input type="file" class="form-file-input" id="avatar" name="avatar">
          <label class="form-file-label" for="avatar">
            <span class="form-file-text custom-file-label">Upload Avatar...</span>
            <span class="form-file-button">Browse</span>
          </label>
        </div>
      </div>
      <div class="updateButton">
        <button class="btn btn-info text-white">Update Profile</button>
      </div>
    </form>
    <a class="Back-To-Profile-Link" href="/profile/<%= user._id %>">Back to Profile</a>
  </div>
</div>
